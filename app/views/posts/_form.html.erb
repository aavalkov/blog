<%= render("layouts/errors", :object => @post) %>

<%= form_for(@post) do |f| %>
  <div class = 'row'>
    <div class = 'col-md-6'>
      <div class="form-group">
        <%= f.label "Title" %>
        <%= f.text_field :name, :class => "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Text" %>
    <%= f.text_area :article, :rows =>15, :class => "form-control" %>
  </div>
  <%= f.submit(:class => 'btn btn-success') %>
<% end%>


